import matplotlib.pyplot as plt
import numpy as nppie

# Number users of languages
data = np.array([7.6*10**6, 8.2*10**6, 5.9*10**6, 1.8*10**6, 1.7*10**6])
labels = ['Java', 'Python', 'Php', 'Ruby ', 'Kotlin']

plt.pie(data, labels=labels, shadow=True,colors=['gold','green','blue','purple','darkorange'])
plt.title('pie chart')
plt.legend(labels, bbox_to_anchor = [1, 1.1])
plt.show()
